anonymous_enable=NO
local_enable=YES
write_enable=YES
local_umask=022
dirmessage_enable=YES
xferlog_enable=YES
connect_from_port_20=YES
xferlog_std_format=YES
listen=YES
pam_service_name=vsftpd
tcp_wrappers=YES
pasv_min_port=60000
pasv_max_port=65000

max_clients=10
max_per_ip=10
hide_ids=YES
chroot_local_user=YES

userlist_enable=YES
userlist_deny=NO
userlist_file=/etc/vsftpd.user_list

ssl_enable=YES
allow_anon_ssl=NO
force_local_data_ssl=NO
force_local_logins_ssl=YES
ssl_tlsv1=YES
ssl_sslv2=NO
ssl_sslv3=NO
ssl_ciphers=HIGH
require_ssl_reuse=NO

## We know this file is in the server but it would be nice to use
## variables instead of hardcoding this
rsa_cert_file=/etc/nginx/certificates/admin.marcocivil.org.br.crt
rsa_private_key_file=/etc/nginx/certificates/admin.marcocivil.org.br.decrypted.pem
